<!doctype html>
<html lang="en">

<head>
  <title>Heaven Luxury: <%= title %></title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- SimpleMDE CSS, FontAwesome and SimpleMDE JS -->

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

  <!-- MarkJax = Markdown + MathJax -->
  <script type="text/javascript" src="https://codeassign.github.io/markjax/dist/markjax.min.js"></script>

  <!-- Bootstrap -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body class="bg-light">
  <div class="container-fluid">
    <div class="row">
      <div class="d-none d-md-block col-xl-2">
        <img style="width:200px;height: 100%; position:fixed;" src="<%= banner.left_banner %>" />
      </div>
      <div id="content" class="col-12 col-md-12 col-xl-9" style="background:white;">
        <div style="width:100%;height:160px;">
          <img style="width:100%;height:100%" src="<%= banner.top_banner %>" />
        </div>

        <% include navbar %>

        <div class="container-fluid mt-2" id="body">
          <div class="row">
            <div class="col-12 col-md-8">
              <div class="border border-top-0 border-left-0 border-right-0">
                <h3><%= title %></h3>
                <small> <%= time %></small>
              </div>
              <div id="div_show_id">
                
              </div>
            </div>
            <div class="col-12 col-md-4 border border-right-0 border-top-0 border-bottom-0">
              <h2>Bài viết mới nhất</h2>
              <div id="id_top_10_news"></div>
              <input class="d-none" id="input_hidden_value" value="<%= content %>">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="http://localhost:3000/js/news.js"></script>
  <script>
    console.log(input_hidden_value.value);
    markjax(input_hidden_value.value,document.getElementById("div_show_id"));
  </script>

</body>

</html>